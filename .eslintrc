{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "ignorePatterns": ["node_modules/", "src/**/*.spec.js"],
  "rules": {
    "semi": [0, "never"],
    "quotes": [1, "single", "avoid-escape"],
    "no-param-reassign": [1],
    "object-curly-spacing": [2, "always"],
    "space-in-parens": [0, "always"],
    "prefer-const": 1,
    "camelcase": [1],
    "no-shadow": [1],
    "no-use-before-define": ["error", { "functions": true }]
  }
}
